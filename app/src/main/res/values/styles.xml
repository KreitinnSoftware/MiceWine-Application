<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundTopCorners">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_top_corners</item>
        <item name="backgroundTint">#FFFFFF</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_top_corners" parent="">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
    </style>

    <style name="TextAppearance.Quicksand" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:textSize">26sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="MiceWine.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
    </style>

</resources>
